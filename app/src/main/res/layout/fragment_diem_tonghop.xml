<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.tdt.appstudent2.fragments.diem.DiemTonghopFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:id="@+id/sst_text"
                    android:padding="4dp"
                    android:layout_weight="2.7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="STT"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/mamon_text"
                    android:padding="4dp"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="Mã môn"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tc_text"
                    android:padding="4dp"
                    android:layout_weight="2.65"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="Số TC"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/dtb_text"
                    android:padding="4dp"
                    android:layout_weight="2.65"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:text="ĐTB"/>
            </LinearLayout>
            <include layout="@layout/line_space"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.widget.SwipeRefreshLayout>
            <View
                android:id="@+id/bb_bottom_bar_shadow"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/layout_bottom_shadow" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
