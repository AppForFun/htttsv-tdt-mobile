<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.tdt.appstudent2.fragments.diem.DiemFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/diem1_text"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_weight="2.5"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="KT 1"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:id="@+id/diem2_text"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_weight="2.5"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="KT 2"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:id="@+id/diemthi1_text"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_weight="2.5"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Thi 1"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:id="@+id/diemthi2_text"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_weight="2.5"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Thi 2"/>
                <include layout="@layout/line_horizontal"/>
                <TextView
                    android:id="@+id/dtb_text"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_weight="2.5"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="ĐTB"/>
            </LinearLayout>
            <include layout="@layout/line_space"/>
        </LinearLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</FrameLayout>
