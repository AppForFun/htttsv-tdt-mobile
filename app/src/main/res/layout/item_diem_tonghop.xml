<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="8dp">
    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/materialRipple"
        android:id="@+id/thongbao_layout">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">
                        <TextView
                            android:id="@+id/monhoc_text"
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:text="LÆ°u Kim Chung"/>
                    </LinearLayout>
                </LinearLayout>
                <include layout="@layout/line_space"/>
                <LinearLayout
                    android:padding="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/stt_text"
                        android:padding="4dp"
                        android:layout_weight="2.7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:text="1"/>
                    <include layout="@layout/line_horizontal"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/mamon_text"
                        android:padding="4dp"
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:text="001001"/>
                    <include layout="@layout/line_horizontal"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tc_text"
                        android:padding="4dp"
                        android:layout_weight="2.65"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:textSize="17dp"
                        android:text="4"/>
                    <include layout="@layout/line_horizontal"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/dtb_text"
                        android:padding="4dp"
                        android:layout_weight="2.65"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:text="10"/>
                </LinearLayout>
                <include layout="@layout/line_space"/>
            </LinearLayout>
        </LinearLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
