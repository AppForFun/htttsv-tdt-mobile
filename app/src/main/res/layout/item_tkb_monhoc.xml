<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/time_start_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:20 am"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/time_finish_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11:00 am"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/layout"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:mrl_rippleColor="@color/materialRipple"
                app:mrl_rippleOverlay="true"
                android:background="@drawable/gradient_bg">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp">
                        <TextView
                            android:padding="8dp"
                            android:id="@+id/tenMH_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phân tích thiết kế hệ thống thông tin"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingTop="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Mã MH"
                                android:textSize="15dp"/>
                            <TextView
                                android:layout_weight="3"
                                android:id="@+id/maMH_text"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="000123"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:paddingTop="4dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="7"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:text="Nhóm"
                                    android:textSize="15dp"/>
                                <TextView
                                    android:id="@+id/nhom_text"
                                    android:layout_weight="3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="15dp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="4dp"
                            android:layout_weight="5"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tổ"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                            <TextView
                                android:id="@+id/to_text"
                                android:layout_weight="3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingTop="4dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_weight="7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Phòng"
                                android:textSize="15dp"/>
                            <TextView
                                android:id="@+id/phong_text"
                                android:layout_gravity="center"
                                android:layout_weight="3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="E0406"
                                android:textColor="@color/white"
                                android:textSize="15dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.balysv.materialripple.MaterialRippleLayout>
            <TextView
                android:id="@+id/pos_text"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/circle_pos_tkb"
                android:text="5"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
